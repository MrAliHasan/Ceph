{
  "extends": [
    "tslint:latest",
    "tslint-react"
  ],
  "rules": {
    "align": [
      "arguments",
      "statements",
      "parameters"
    ],
    "no-console": [
      false
    ],
    "arrow-parens": false,
    "adjacent-overload-signatures": true,
    "object-literal-shorthand": true,
    "no-var-requires": false,
    "jsx-no-multiline-js": false,
    "ordered-imports": [
      false
    ],
    "jsdoc-format": true,
    "interface-name": [
      "never-prefix",
      true
    ],
    "interface-over-type-literal": false,
    "typedef-whitespace": [
      true,
      {
        "call-signature": "nospace",
        "index-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      }
    ],
    "member-access": false,
    "object-literal-sort-keys": false,
    "no-require-imports": false,
    "class-name": true,
    "comment-format": [
      true,
      "check-space"
    ],
    "indent": [
      true,
      "spaces"
    ],
    "no-inferrable-types": [
      true
    ],
    "no-duplicate-variable": true,
    "no-eval": true,
    "no-internal-module": true,
    "no-trailing-whitespace": true,
    "no-var-keyword": true,
    "one-variable-per-declaration": [
      true
    ],
    "one-line": [
      true,
      "check-open-brace",
      "check-whitespace",
      "check-catch",
      "check-finally",
      "check-else"
    ],
    "no-angle-bracket-type-assertion": true,
    "quotemark": [
      true,
      "single",
      "jsx-double"
    ],
    "semicolon": [
      true,
      "always"
    ],
    "triple-equals": [
      true,
      "allow-null-check"
    ],
    "variable-name": [
      true,
      "check-format",
      "allow-pascal-case",
      "allow-trailing-underscore",
      "allow-leading-underscore",
      "ban-keywords"
    ],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-separator",
      "check-type",
      "check-typecast",
      "check-module"
    ]
  }
}
